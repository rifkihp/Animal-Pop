<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_product_width"
    android:layout_height="@dimen/image_product_height"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/board_field"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="@dimen/image_product_height"
        android:layout_height="@dimen/image_product_height"
        android:layout_marginStart="@dimen/margin_5"
        android:src="@drawable/product_color_ball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:fontFamily="@font/baloo"
        android:gravity="start"
        android:text="@string/txt_color_ball"
        android:textColor="@color/brown"
        android:textSize="@dimen/txt_product_name_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_product"
        app:layout_constraintStart_toEndOf="@id/image_product"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_product"
        android:layout_width="@dimen/btn_price_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@drawable/btn_price_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>